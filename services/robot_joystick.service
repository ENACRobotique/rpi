[Unit]
Description= Joystick
After=network.target network-online.target

[Service]
Type=simple
Restart=on-failure

WorkingDirectory=/home/robot/rpi/drivers/joystick
ExecStart=/home/robot/rpi/virtualEnv/btEnv/bin/python /home/robot/rpi/drivers/joystick/joystick.py
#ExecStart=python3 /home/robot/rpi/drivers/joystick/joystick.py
KillSignal=SIGKILL
#RestartSec=2 
# Configures the time to wait before service is stopped forcefully.
TimeoutStopSec=300
 
[Install]


